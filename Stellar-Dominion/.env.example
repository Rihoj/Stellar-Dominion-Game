# Stellar Dominion Game Environment Configuration
# Copy this file to .env and adjust the values for your environment

# Database Configuration
DB_HOST=localhost
DB_DATABASE=users
DB_USERNAME=admin
DB_PASSWORD=password

# Redis Configuration (optional)
REDIS_HOST=redis
REDIS_PORT=6379

# Mail Configuration
MAIL_HOST=localhost
MAIL_PORT=25
MAIL_FROM=noreply@stellar-dominion.com

# Application Environment
APP_ENV=production
APP_DEBUG=false

# Game Configuration
AVATAR_SIZE_LIMIT=500000
MIN_USER_LEVEL_AVATAR=5
MAX_BIOGRAPHY_LENGTH=500
CSRF_TOKEN_EXPIRY=3600
RECRUITMENT_BONUS=50

# Timezone
APP_TIMEZONE=America/New_York
