# .htaccess
RewriteEngine On

# These paths are now relative to the directory containing this .htaccess file.
ErrorDocument 404 public/404.php
ErrorDocument 403 public/403.php
ErrorDocument 500 public/500.php

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
# This rule correctly forwards requests to the index.php inside the public folder.
RewriteRule ^(.*)$ public/$1 [L]