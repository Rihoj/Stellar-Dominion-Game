{
    "name": "stellar-dominion/game",
    "description": "A browser-based strategy game built with PHP",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Stellar Dominion Team",
            "email": "dev@stellardominion.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-session": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpunit/php-code-coverage": "^9.2"
    },
    "autoload": {
        "psr-4": {
            "StellarDominion\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "StellarDominion\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "test-unit": "phpunit --testsuite=Unit",
        "test-integration": "phpunit --testsuite=Integration"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
